{{ form_start(form) }}
	<section>
		<div class="row">
			<div class="col-sm-6 col-md-3">
				<small class="text-muted">{{nombreCuenta|default('Compañia')}} *</small>
				
				<select name="cboEmpresa[]" class="select2" multiple="multiple" data-placeholder="Selecciona Sucursal" style="width: 100%;" required>
					<option></option>
					{% for cuenta in cuentas %}
						<option value="{{cuenta.id}}"
						{% if cuentas_sel is defined %}
							{% for usuarioCuent in cuentas_sel %}
								{% if usuarioCuent.cuenta.id==cuenta.id %}
									selected
								{% endif %}
							{% endfor %}
						{% endif %}
						>{{cuenta.nombre}}</option>
					{% endfor %}}
				</select>
			</div>
			<div class="col-sm-6 col-md-6">
				<small class="text-muted">Nombre</small>
				{{form_row(form.nombre,{'label':false,'attr':{'class':'form-control'}})}}
			</div>
			<div class="col-sm-6 col-md-3">
				<small class="text-muted">Colaborador *</small>
				
				<select name="cboTipoDocumento" class="form-control" required>
					<option></option>
					{% for tipo_documento in tipo_documentos %}
						<option value="{{tipo_documento.id}}"
						{% if usuario.tipoDocumento.id is defined %}

								{% if  usuario.tipoDocumento.id ==tipo_documento.id %}
									selected
								{% endif %}
						
						{% endif %}
						>{{tipo_documento.nombre}}</option>
					{% endfor %}}
				</select>
			</div>
			<div class="col-sm-6  col-md-3">
				<small class="text-muted">Tipo de usuario</small>
				<select name="cboUsuarioTipo" class="form-control" required>
					<option></option>
					{% for usuarioTipo in usuarioTipos %}
						<option value="{{usuarioTipo.id}}"
						{% if usuario.usuarioTipo.id is defined %}

								{% if  usuario.usuarioTipo.id == usuarioTipo.id %}
									selected
								{% endif %}
						
						{% endif %}
						>{{usuarioTipo.nombre}}</option>
					{% endfor %}}
				</select>
			</div>
			<div class="col-sm-6 col-md-3">
				<small class="text-muted">Rut</small>
				{{form_row(form.rut,{'label':false,'attr':{'class':'form-control','placeholder':'Rut'}})}}
				
			</div>
			<div class="col-sm-6 col-md-3">
			<small class="text-muted">Correo</small>
				{{form_row(form.correo,{'label':false,'attr':{'class':'form-control'}})}}
			</div>
			<div class="col-sm-6 col-md-3">
				<small class="text-muted">Telefono</small>
				{{form_row(form.telefono,{'label':false,'attr':{'class':'form-control'}})}}
				
			</div>
			<div class="col-sm-6 col-md-3">
				<small class="text-muted">Whatsapp</small>
				{{form_row(form.whatsapp,{'label':false,'attr':{'class':'form-control'}})}}
				
			</div>
			<div class="col-sm-6 col-md-3">
				<small class="text-muted">Dirección</small>
				{{form_row(form.direccion,{'label':false,'attr':{'class':'form-control'}})}}
				
			</div>
			<div class="col-sm-6 col-md-3">
				<small class="text-muted">Sexo</small>
				{{form_row(form.sexo,{'label':false,'attr':{'class':'form-control'}})}}
				
			</div>
			
		</div>
	</section>
	<section>
		<div class="row">
			<div class="col-12">
			<h1>Datos de Sesión</h1>
			</div>
			<div class="col-sm-6 col-md-3">
				<small class="text-muted">Usuario</small>
				{{form_row(form.username,{'label':false,'attr':{'class':'form-control','placeholder':'Usuario'}})}}
			</div>
			<div class="col-sm-6 col-md-3">
				<small class="text-muted">Password</small>
				{{form_row(form.password,{'label':false, 'attr':{'class':'form-control', 'placeholder':'******' ,'type':'password','required':false}})}}
				{{form_row(form.passwordAnt,{'label':false, 'attr':{'class':'form-control', 'placeholder':'******' ,'type':'password','required':false}})}}
			</div>
		</div>
	</section>
    <button class="btn btn-primary">{{ button_label|default('Crear') }}</button>
	<script>
		$(function () {
			//Initialize Select2 Elements
			$('.select2').select2();
			
		
		});
	</script>
{{ form_end(form) }}
