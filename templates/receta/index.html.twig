{% extends 'base.html.twig' %}

{% block title %}Receta index{% endblock %}

{% block body %}
   <div class="card">
        <div class="card-header">
            <form action="" method="get">
                <div class="row">
                    <div class="col-sm-12 col-md-3">
                        <input type="text" class="form-control bReceta" name="bReceta" placeholder="Nombre Receta" value="">
                    </div>
                    <div class="col-sm-12 col-md-3">
                        <input type="text" class="form-control daterange" name="bFecha" id="bFecha"  value="">
                    </div>
                    <div class="col-sm-12 col-md-1">
                        <button class="btn btn-primary"><i class="fas fa-search"></i></button>
                    </div>
                   
                </div>
                </form>
        </div>
        <div class="card-body">
            {% if modo == 1 %}
        <a href="{{path('receta_new')}}" class="btn btn-primary" id="btn-agregar"><i class="fas fa-plus"></i></a>
            <a href="{{path('receta_index',{'modo':'trash'})}}" class="btn btn-danger"><i class="fas fa-trash"></i> {{pagina|default('Item')}} Eliminados</a>
        {% else %}
            <a href="{{path('receta_index')}}" class="btn btn-success"><i class="fas fa-trash-restore"></i>  {{pagina|default('Item')}} Activos</a>
        {% endif %}
            {# display navigation #}
            <div class="navigation">
                {{ knp_pagination_render(recetas,'@KnpPaginator/Pagination/twitter_bootstrap_v4_pagination.html.twig',{},{
                'position': 'centered',
                'rounded': true,
                }) }}
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>FechaIngreso</th>
                        <th>Rendimiento</th>
                        <th>Total</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for receta in recetas %}
                    <tr>
                        <td>{{ receta.id }}</td>
                        <td>{{ receta.nombre }}</td>
                        <td>{{ receta.fechaIngreso ? receta.fechaIngreso|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ receta.rendimiento }}</td>
                        <td>{{ receta.total }}</td>
                        <td>
                             <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                           
                                <a href="{{ path('receta_detail', {'id': receta.id}) }}" class="btn btn-success"><i class="fas fa-edit"></i></a>
                            
                                {{ include('receta/_delete_form.html.twig',{'receta_id':receta.id}) }}
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">No hay {{pagina|default("Items")}}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {# display navigation #}
            <div class="navigation">
                {{ knp_pagination_render(recetas,'@KnpPaginator/Pagination/twitter_bootstrap_v4_pagination.html.twig',{},{
                'position': 'centered',
                'rounded': true,
                }) }}
            </div>
        </div>
    </div>
<script>

        $('.daterange').daterangepicker({
        
            "drops": "down",
            "startDate":"{{dateInicio}}",
            "endDate": "{{dateFin}}",
            "locale": {
                "format": "YYYY-MM-DD",
                "applyLabel": "Apply",
                "cancelLabel": "Cancel",
            }
        }, function(start, end, label) {
        console.log('New date range selected: ' + start.format('YYYY-MM-DD') + ' to ' + end.format('YYYY-MM-DD') + ' (predefined range: ' + label + ')');
        
        });

</script>
   
{% endblock %}
