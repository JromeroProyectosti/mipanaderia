<form method="post" action="{{ path('receta_delete', {'id': receta_id}) }}" onsubmit="return confirm('esta seguro de eliminar esta receta?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ receta_id) }}">
    <button class="btn btn-danger"><i class="fas fa-trash"></i></button>
</form>
