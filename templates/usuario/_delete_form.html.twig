<form method="post" action="{{ path('usuario_delete', {'id': id_usuario}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ usuario.id) }}">
    <button class="btn btn-danger"><span class="fas fa-trash"></span></button>
</form>
